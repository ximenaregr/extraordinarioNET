                       FontSize="60" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center"/>
            </Frame>

            <!-- TÃ­tulo Principal -->
            <Label Text="TOP 10" 
                   FontSize="48" 
                   FontAttributes="Bold" 
                   TextColor="White" 
                   HorizontalOptions="Center"
                   FontFamily="Arial"/>

            <Label Text="ARTISTAS" 
                   FontSize="32" 
                   FontAttributes="Bold" 
                   TextColor="White" 
                   HorizontalOptions="Center"
                   FontFamily="Arial"/>

            <!-- DescripciÃ³n -->
            <Label Text="Descubre los mejores artistas del momento" 
                   FontSize="16" 
                   TextColor="White" 
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Opacity="0.9"/>

            <!-- BotÃ³n de Inicio -->
            <Button Text="INICIAR" 
                    Command="{Binding StartCommand}"
                    BackgroundColor="White"
                    TextColor="#FF6B35"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    WidthRequest="200"
                    HeightRequest="50">
                <Button.Shadow>
                    <Shadow Brush="Black" Offset="0,4" Radius="8" Opacity="0.3"/>
                </Button.Shadow>
            </Button>

        </StackLayout>
    </Grid>
</ContentPage>